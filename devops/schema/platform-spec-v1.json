{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "platform.althq.com/v1",
  "title": "Platform Service Spec v1",
  "description": "Schema for platform.yaml (apiVersion: platform.althq.com/v1)",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "additionalProperties": false,
  "properties": {
    "apiVersion": { "type": "string", "const": "platform.althq.com/v1" },
    "kind": { "type": "string", "const": "Service" },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 2,
          "maxLength": 63,
          "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
          "description": "Service name (DNS-safe, used for stack names, etc.)"
        },
        "description": { "type": "string", "description": "Optional human-readable description" }
      }
    },
    "spec": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "compute": {
          "type": "object",
          "description": "Compute configuration (e.g. ECS). Optional if other sections are used.",
          "additionalProperties": false,
          "properties": {
            "type": { "type": "string", "enum": ["ecs"], "default": "ecs" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535, "description": "Container port" },
            "cpu": { "type": "integer", "minimum": 256, "description": "CPU units" },
            "memory": { "type": "integer", "minimum": 512, "description": "Memory in MiB" },
            "instances": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "min": { "type": "integer", "minimum": 0, "description": "Minimum number of instances" }
              }
            },
            "healthCheck": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "path": { "type": "string", "description": "Health check path" }
              }
            }
          }
        },
        "secrets": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of secret names to inject (values from environment)"
        },
        "storage": {
          "type": "object",
          "description": "EFS storage configuration",
          "additionalProperties": false,
          "properties": {
            "efs": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "encrypted": { "type": "boolean", "default": true },
                "lifecycle": { "type": "string", "enum": ["AFTER_7_DAYS", "AFTER_14_DAYS", "AFTER_30_DAYS", "AFTER_90_DAYS"], "default": "AFTER_30_DAYS" },
                "accessPoint": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "path": { "type": "string", "default": "/data" },
                    "uid": { "type": "integer", "default": 1000 },
                    "gid": { "type": "integer", "default": 1000 }
                  }
                }
              }
            }
          }
        },
        "cache": {
          "type": "object",
          "description": "ElastiCache Redis configuration",
          "additionalProperties": false,
          "properties": {
            "engine": { "type": "string", "enum": ["redis"], "default": "redis" },
            "nodeType": { "type": "string", "default": "cache.t3.micro" },
            "numNodes": { "type": "integer", "minimum": 1, "default": 1 }
          }
        },
        "database": {
          "type": "object",
          "description": "RDS PostgreSQL configuration",
          "additionalProperties": false,
          "properties": {
            "engine": { "type": "string", "enum": ["postgres"], "default": "postgres" },
            "instanceClass": { "type": "string", "default": "db.t3.micro" },
            "allocatedStorage": { "type": "integer", "minimum": 20, "default": 20 },
            "dbName": { "type": "string", "description": "Database name (default from service name)" },
            "dbUsername": { "type": "string", "description": "Master username (default from service name)" }
          }
        },
        "serviceDiscovery": {
          "type": "object",
          "description": "AWS Cloud Map service discovery configuration",
          "additionalProperties": false,
          "properties": {
            "namespace": { "type": "string", "description": "Private DNS namespace name" }
          }
        },
        "triggers": {
          "type": "object",
          "description": "Agent trigger infrastructure (EventBridge, webhooks)",
          "additionalProperties": false,
          "properties": {
            "webhookGateway": { "type": "boolean", "default": false },
            "eventbridge": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "scheduleGroup": { "type": "string", "description": "EventBridge Scheduler group name" }
              }
            }
          }
        },
        "lambda": {
          "type": "object",
          "description": "Lambda function configuration",
          "additionalProperties": false,
          "properties": {
            "functions": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["name", "image"],
                "properties": {
                  "name": { "type": "string", "minLength": 1 },
                  "image": { "type": "string", "minLength": 1 },
                  "memory": { "type": "integer", "minimum": 128, "default": 2048 },
                  "timeout": { "type": "integer", "minimum": 1, "default": 120 }
                }
              }
            }
          }
        }
      }
    }
  }
}
